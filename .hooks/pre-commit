#!/bin/sh
# Pre-commit hook for gren - formats Go code before commit

# Get staged .go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$')

if [ -z "$STAGED_GO_FILES" ]; then
    exit 0
fi

# Format staged files
echo "Formatting Go files..."
gofmt -w $STAGED_GO_FILES

# Re-add formatted files
git add $STAGED_GO_FILES

# Run go vet
echo "Running go vet..."
go vet ./...
if [ $? -ne 0 ]; then
    echo "go vet failed"
    exit 1
fi

exit 0
